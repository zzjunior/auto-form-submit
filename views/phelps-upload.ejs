<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Upload Planilha - Phelps</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600&display=swap" rel="stylesheet">
  <style>
    body, .form-label, .btn, input, label, small, a {
      font-family: 'Poppins', Arial, sans-serif !important;
    }
    .sidebar {
      height: 100vh;
      position: fixed;
      left: 0;
      top: 0;
      width: 200px;
      background: #fff;
      border-right: 1px solid #eee;
      padding-top: 60px;
      z-index: 1030;
      box-shadow: 2px 0 8px rgba(0,0,0,0.03);
      transition: width 0.2s;
    }
    .sidebar.collapsed {
      width: 60px;
    }
    .sidebar .nav-link {
      color: #333;
      font-weight: 500;
      padding: 12px 24px;
      display: block;
      transition: background 0.2s, padding 0.2s, opacity 0.2s;
    }
    .sidebar.collapsed .nav-link span {
      display: none;
    }
    .sidebar.collapsed .nav-link {
      padding: 12px 10px;
      text-align: center;
    }
    .sidebar .nav-link:hover {
      background: #f8f9fa;
      color: #0d6efd;
      text-decoration: none;
    }
    .sidebar-toggle {
      position: absolute;
      top: 10px;
      right: -20px;
      background: #fff;
      border: 1px solid #eee;
      border-radius: 50%;
      width: 36px;
      height: 36px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 1050;
      box-shadow: 0 2px 8px rgba(0,0,0,0.07);
      transition: right 0.2s;
    }
    .sidebar.collapsed + .main-content {
      margin-left: 60px;
    }
    @media (max-width: 768px) {
      .sidebar {
        width: 100%;
        height: auto;
        position: static;
        border-right: none;
        box-shadow: none;
        padding-top: 0;
      }
      .sidebar.collapsed {
        width: 100%;
      }
      .main-content {
        margin-left: 0 !important;
      }
    }
    .main-content {
      margin-left: 200px;
      transition: margin-left 0.2s;
    }
  </style>
</head>
<body class="bg-light">
  <!-- Sidebar -->
  <nav class="sidebar d-flex flex-column" id="sidebar">
    <button class="sidebar-toggle" id="sidebarToggle" title="Encolher/Expandir">
      <span class="navbar-toggler-icon"></span>
    </button>
    <a href="/" class="nav-link"><span>In√≠cio</span></a>
    <a href="/logout" class="nav-link"><span>Logout</span></a>
  </nav>
  <!-- Main Content -->
  <div class="main-content">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card shadow">
            <div class="card-body">
              <h5 class="card-title mb-4 text-center">Upload Planilha - Phelps</h5>
              <form action="/phelps/upload" method="post" enctype="multipart/form-data">
                <label class="form-label">Selecione a planilha:</label>
                <input type="file" name="planilha" class="form-control mb-3" required>
                <button type="submit" class="btn btn-primary w-100">Enviar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <footer class="bg-white text-center py-3 mt-5 shadow-sm"
    style="position:fixed;left:0;bottom:0;width:100%;z-index:1040;">
    <div class="container">
      <small class="text-muted text-decoration-none">&copy; 2025 <a href="https://github.com/zzjunior">zzjunior</a></small>
    </div>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const sidebar = document.getElementById('sidebar');
    const sidebarToggle = document.getElementById('sidebarToggle');
    sidebarToggle.addEventListener('click', function() {
      sidebar.classList.toggle('collapsed');
    });
  </script>
</body>
</html>
